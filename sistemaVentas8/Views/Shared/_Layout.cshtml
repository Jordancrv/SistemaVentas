<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar" class="sidebar">
        <div class="sidebar-inner slimscroll">
            <div id="sidebar-menu" class="sidebar-menu">
                <ul>

                    <li class="submenu">
                        <a href="javascript:void(0);">
                            <img src="/lib/img/product.svg" alt="img" />
                            <span> Productos</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Producto" asp-action="ListarProducto">Lista de Productos</a>
                            </li>
                            <li>
                                <a asp-controller="Producto" asp-action="AgregarProducto">Agregar Productos</a>
                            </li>
                            <li>
                                <a asp-controller="Categoria" asp-action="ListarCategoria">Lista de Categorías</a>
                            </li>
                            <li>
                                <a asp-controller="Categoria" asp-action="AgregarCategoria">Agregar Categoría</a>
                            </li>
                        </ul>
                    </li>

                    <li class="submenu">
                        <a href="javascript:void(0);">
                            <img src="~/lib/img/sales1.svg" alt="img" />
                            <span> Ventas</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Venta" asp-action="ListarVentas">Lista de Ventas</a>
                            </li>
                            <li>
                                <a asp-controller="Venta" asp-action="AgregarVenta">Agregar Venta</a>
                            </li>
                        </ul>
                    </li>

                    <li class="submenu">
                        <a href="javascript:void(0);">
                            <img src="~/lib/img/transfer1.svg" alt="img" />
                            <span> Transferencias</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Transfer" asp-action="ListarTransferencias">Lista de Transferencias</a>
                            </li>
                            <li>
                                <a asp-controller="Transfer" asp-action="AgregarTransferencia">Agregar una Transferencia</a>
                            </li>
                        </ul>
                    </li>

                    <li class="submenu">
                        <a href="javascript:void(0);">
                            <img src="~/lib/img/users1.svg" alt="img" />
                            <span> Personal</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Personal" asp-action="ListarPersonal">Lista de Personal</a>
                            </li>
                            <li>
                                <a asp-controller="Personal" asp-action="AgregarPersonal">Agregar Personal</a>
                            </li>
                            <li>
                                <a asp-controller="Proveedor" asp-action="ListarProveedores">Lista de Proveedores</a>
                            </li>
                            <li>
                                <a asp-controller="Proveedor" asp-action="AgregarProveedor">Agregar Proveedores</a>
                            </li>
                            <li>
                                <a href="#" class="cargar-vista" data-url="@Url.Action("ListarCliente", "MantenedorCliente")">Lista de Clientes</a>
                            </li>
                            <li>
                                <a asp-controller="Usuario" asp-action="AgregarUsuario">Agregar Usuario</a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="navbar">
        <div id="sidebarToggle" class="hamburger">&#9776;</div>
        <span>Panel de Administración</span>
    </div>

    <div class="main">
        <div id="contenido-dinamico">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/sidebar.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
