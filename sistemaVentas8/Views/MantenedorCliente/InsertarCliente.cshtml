@model capaEntidad.EntCliente

@{
    ViewData["Title"] = "Insertar Cliente";
}

<h2>Insertar Cliente</h2>

<form asp-action="InsertarCliente" method="post">
    <div class="form-group">
        <label for="rucCliente">RUC:</label>
        <input type="text" class="form-control" id="rucCliente" name="RucCliente" />
    </div>
    <div class="form-group">
        <label for="razonSocial">Razón Social:</label>
        <input type="text" class="form-control" id="razonSocial" name="RazonSocial" />
    </div>
    <div class="form-group">
        <label for="rirCliente">Dirección:</label>
        <input type="text" class="form-control" id="dirCliente" name="DirCliente" />
    </div>
    <div class="form-group">
        <label for="idCiudad">Ciudad:</label>
        <input type="number" class="form-control" id="idCiudad" name="IdCiudad" />
    </div>
    <div class="form-group">
        <label for="idTipoCliente">Tipo Cliente:</label>
        <input type="number" class="form-control" id="idTipoCliente" name="IdTipoCliente" />
    </div>
    <div class="form-group">
        <label for="idEstCliente">Estado Cliente:</label>
        <input type="number" class="form-control" id="idEstCliente" name="IdEstCliente" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
